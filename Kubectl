
**** Kind *****
kind create cluster

kind get clusters

kind delete cluster

*** Kubectl ***

#Versão
kubectl version --client=true

#Informações do Cluster
kubectl cluster-info

#Obter Nodes
  kubectl get nodes

# Visualizar a configurações 
kubectl config get-contexts

kubectl config view

#Expondo uma porta da maquina
kubectl expose deployment first-deployment --port=80 --type=NodePort

# The command below finds the allocated port and executes a HTTP request.

export PORT=$(kubectl get svc first-deployment -o go-template='{{range.spec.ports}}{{if .nodePort}}{{.nodePort}}{{"\n"}}{{end}}{{end}}')
echo "Accessing host01:$PORT"
curl host01:$PORT
#Criar um pod pu demais objetos
kubectl apply -f [arquivo.yaml]

#Criar objetos de uma pasta
kubectl apply -f ../Pasta/

#Visualizar todos os Pods
kubectl get all -A

   kubectl get pods

   kubectl get po -n 'namespace'

-- All pods and Pods System
   kubectl get pods -A

#Deletar pod
 kubectl delete pod [nome-pod]

 kubectl delete -f [arquivo.yaml[


#Obter Informações sobre objetos
kubectl explain pods

#Edit Deployment
kubectl edit [Nome Deployment]

#Get Deployed Objects
kubectl get deployment

#Rollback Deployment
kubectl rollout undo deployment/[Deployment Name]


#List the API resources that are available  (possible determine if a resource is namespaced)
kubectl api-resources

#Namespaces

 -- Get all object determine namespaces
    kubectl get all -n 'namespaceName'
 
  --Delete ns and every one of those objects
    kubectl delete ns 'name' 



